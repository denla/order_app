<script>
  const path = window.location.pathname;
  const allTabs = document.querySelectorAll('.nav-link');
  allTabs.forEach(tab => {
    tab.classList.remove('active');
    if (tab.getAttribute('href') === path) {
      tab.classList.add('active');
    }
  })
</script>